    <script>
        function toggleNotification(element) {
            const content = element.querySelector('.notification-content');
            const dot = element.querySelector('.unread-dot');
            
            // Toggle expanded state
            content.classList.toggle('expanded');
            
            // Mark as read (remove dot)
            if (dot) {
                dot.style.display = 'none';
                updateNotificationCount();
            }
        }

        function markAllAsRead() {
            const dots = document.querySelectorAll('.unread-dot');
            dots.forEach(dot => {
                dot.style.display = 'none';
            });
            updateNotificationCount();
        }

        function updateNotificationCount() {
            const visibleDots = document.querySelectorAll('.unread-dot[style=""], .unread-dot:not([style*="display: none"])');
            const count = visibleDots.length;
            const countElement = document.getElementById('notificationCount');
            
            if (count === 0) {
                countElement.textContent = 'All notifications read';
                countElement.classList.add('text-green-600');
            } else {
                countElement.textContent = `${count} new notification${count > 1 ? 's' : ''}`;
                countElement.classList.remove('text-green-600');
            }
        }

        // Initialize notification count on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateNotificationCount();
        });
