      // Pin modal
      function showPinModal() {
        const modal = document.getElementById("pin-modal");
        modal.classList.remove("hidden");

        document
          .getElementById("close-modal")
          .addEventListener("click", function () {
            modal.classList.add("hidden");
          });
      }
        let selectedNetwork = '';
        let selectedAmount = '';

        // Network selection
        document.querySelectorAll('.network-btn').forEach(btn => {
            btn.addEventListener('click', function() {
              document.querySelectorAll('.network-btn').forEach(btn => {
                    btn.classList.remove('border-red-200', 'text-red-500');
                    btn.classList.add('border-blue-200');});

                // Remove active class from all network buttons
                document.querySelectorAll('.network-btn').forEach(b => {
                    b.classList.remove('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                    b.classList.add('from-blue-50', 'to-blue-100', 'border-blue-200');
                    // b.querySelector('div:last-child').classList.remove('text-white');
                    // b.querySelector('div:last-child').classList.add('text-gray-800');
                });
                
                // Add active class to clicked button
                this.classList.remove('from-blue-50', 'to-blue-100', 'border-blue-200');
                this.classList.add('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                // this.querySelector('div:last-child').classList.remove('text-gray-800');
                // this.querySelector('div:last-child').classList.add('text-white');
                
                selectedNetwork = this.dataset.network;
                document.getElementById('selectedNetwork').value = selectedNetwork;
            });
        });

        // Amount selection
        document.querySelectorAll('.amount-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remove active class from all amount buttons
                document.querySelectorAll('.amount-btn').forEach(b => {
                    b.classList.remove('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                    b.classList.add('from-blue-50', 'to-blue-100', 'border-blue-200');
                    b.querySelector('div').classList.remove('text-white');
                    b.querySelector('div').classList.add('text-gray-800');
                });
                
                // Add active class to clicked button
                this.classList.remove('from-blue-50', 'to-blue-100', 'border-blue-200');
                this.classList.add('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                this.querySelector('div').classList.remove('text-gray-800');
                this.querySelector('div').classList.add('text-white');
                
                selectedAmount = this.dataset.amount;
                document.getElementById('amount').value = selectedAmount;
            });
        });

        // Custom amount input
        document.getElementById('amount').addEventListener('change', function() {
            // Remove active class from all amount buttons when typing custom amount
            document.querySelectorAll('.amount-btn').forEach(b => {
                b.classList.remove('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                b.classList.add('from-blue-50', 'to-blue-100', 'border-blue-200');
                b.querySelector('div').classList.remove('text-white');
                b.querySelector('div').classList.add('text-gray-800');
            });
        });

        // Phone number formatting
        document.getElementById('phoneNumber').addEventListener('change', function() {
            this.value = this.value.replace(/\D/g, '');
        });

        // Pin submission
        document.getElementById('pin').addEventListener('submit', function(e) {
            e.preventDefault();
            const pin = document.getElementById('fpin').value + document.getElementById('spin').value + document.getElementById('tpin').value + document.getElementById('fopin').value;
            // Validate pin
            if (pin.length === 4) {
              const network = document.getElementById('selectedNetwork').value;
              const phoneNumber = document.getElementById('phoneNumber').value;
              const amount = document.getElementById('amount').value;

              console.log("amount", amount,"network",  network,"phone number", phoneNumber);
                // Simulate successful transaction
                // document.getElementById('successMessage').classList.remove('hidden');
                // document.getElementById('transactionDetails').innerText = `Network: ${selectedNetwork}, Phone: ${document.getElementById('phoneNumber').value}, Amount: ₦${document.getElementById('amount').value}`;
                
                // Hide pin modal
                document.getElementById("pin-modal").classList.add("hidden");
                
                // Reset form
                document.getElementById('airtimeForm').reset();
                // Remove active class from all amount buttons
                document.querySelectorAll('.amount-btn').forEach(b => {
                    b.classList.remove('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                    b.classList.add('from-blue-50', 'to-blue-100', 'border-blue-200');
                    b.querySelector('div').classList.remove('text-white');
                    b.querySelector('div').classList.add('text-gray-800');
                });
                // Remove active class from all network buttons
                document.querySelectorAll('.network-btn').forEach(b => {
                b.classList.remove('from-blue-600', 'to-indigo-600', 'text-white', 'border-blue-600', 'shadow-blue-500/25');
                b.classList.add('from-blue-50', 'to-blue-100', 'border-blue-200');
                });
            } else {
                document.getElementById('fpin').classList.add('border-red-500');
                document.getElementById('spin').classList.add('border-red-500');
                document.getElementById('tpin').classList.add('border-red-500');
                document.getElementById('fopin').classList.add('border-red-500');
            }
        });
        // Form submission
        document.getElementById('airtimeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const network = document.getElementById('selectedNetwork').value;
            const phoneNumber = document.getElementById('phoneNumber').value;
            const amount = document.getElementById('amount').value;
            
            if (!network) {
                document.querySelectorAll('.network-btn').forEach(btn => {
                    btn.classList.add('border-red-200', 'text-red-500');
                    btn.classList.remove('border-blue-200');});
                // return;
            }
            
            if (!phoneNumber || phoneNumber.length !== 11) {
                document.getElementById('phoneNumber').classList.add('border-red-500');
                document.getElementById('phoneError').classList.remove('hidden');
                // return;
            }
            
            if (!amount || amount < 50) {
                document.getElementById('amount').classList.add('border-red-500');
                document.getElementById('amountError').classList.remove('hidden');
                // return;
            }
            if (network && phoneNumber.length === 11 && amount >= 50) {      
                // Show pin modal
                showPinModal();
            }
          });
    </script>
  </body>
