    <script>
        // Generate a random error ID for tracking
        function generateErrorId() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let result = '';
            for (let i = 0; i < 8; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        // Set the error ID
        document.getElementById('errorId').textContent = generateErrorId();

        // Auto-refresh functionality (optional)
        let refreshTimer;
        function startAutoRefresh() {
            refreshTimer = setTimeout(() => {
                if (confirm('Would you like to try refreshing the page automatically?')) {
                    window.location.reload();
                }
            }, 30000); // 30 seconds
        }

        // Start auto-refresh timer
        startAutoRefresh();

        // Clear timer if user interacts with the page
        document.addEventListener('click', () => {
            if (refreshTimer) {
                clearTimeout(refreshTimer);
            }
        });
    </script>